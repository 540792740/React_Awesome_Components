{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "target": "es5",
    "lib": [
      "esnext",
      "es7",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    // "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ]
}